{
  "name": "tiktok-live-monitor",
  "version": "1.0.0",
  "description": "Desktop application for monitoring TikTok Live streams",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:win:x86": "electron-builder --win --ia32",
    "build:win:x64": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.tiktok.live.monitor",
    "productName": "TikTok Live Monitor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "styles.css",
      "index.html",
      "tiktok-connector.js"
    ],
    "win": {
      "target": [
        "msi"
      ],
      "icon": "./build/icons/win/icon.ico",
      "legalTrademarks": "Kelas Malam"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./build/icons/mac/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "./build/icons/png/256x256.png"
    }
  },
  "keywords": [
    "tiktok",
    "live",
    "monitor",
    "electron"
  ],
  "author": "Asyrawi",
  "license": "MIT",
  "dependencies": {
    "tiktok-live-connector": "^2.1.1-beta1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}